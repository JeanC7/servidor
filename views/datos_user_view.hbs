<body>
    <div style="height: 30px">   </div>
<div class="container" >
    <h2>Lista de datos</h2>
    <button onclick="myFunction()" class="btn btn-success atraaa"  id="atras">Atrás</button>
    
    <div style="height: 30px"></div>
    
        <input type="text" class="form-control pull-right" style="width:20%" id="search" placeholder="Buscar">
    
    <div style="height: 10px"></div>
    <table class="table table-striped" id="mytable2">
        <thead>
        <tr>
            <th>Nombre de aplicación</th>
            <th>Nombre de packete</th>
            <th>Tipo de app</th>
            <th>Tiempo de uso </th>
            <th>Nombre de dispositivo</th>
            <th >Última fecha de inicio</th>
            <th >Total de uso</th>
            <th >Dirección</th>
            <th>Action</th>

        </tr>
        </thead>
        <tbody>
        {{#each results}}
            <tr>
                <td>{{ Nombre_app }}</td>
                <td>{{ Nombe_packete }}</td>
                <td>{{ Tipo_app }}</td>
                <td>{{ Tiempo_uso }}</td>
                <td>{{ Nombre_dispositivo }}</td>  
                <td>{{ Fecha }}</td>   
                <td>{{ T_uso }}</td> 
                <td>{{ Direccion }}</td>  
                
                <td>    

                           <a href="javascript:void(0);" class="btn btn-sm btn-success select"
                       data-id-name="{{ Nombre_app }}" data-id-email="{{ email }}">Detalles</a>
                          

                </td>
                 </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<script src="/assets/js/jquery-3.3.1.min.js"></script>
<script src="/assets/js/bootstrap.js"></script>
